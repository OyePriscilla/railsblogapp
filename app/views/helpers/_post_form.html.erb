<%= form_with model: @post, url: user_posts_path, method: :post, scope: :new_post  do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :text %><br>
    <%= form.text_area :text %><br>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>